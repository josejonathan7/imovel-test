{
	"root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
    "extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
